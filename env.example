# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
# REQUIRED for API key generation and MCP server
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Site URL
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Webhook Signing
# Used to sign outbound webhooks to your n8n (or other) endpoint.
# Example: openssl rand -hex 32
WEBHOOK_SIGNING_SECRET=replace_with_strong_random_hex

# VAPI Integration
# The MCP server uses SUPABASE_SERVICE_ROLE_KEY for API key validation
# No additional environment variables needed - API keys are managed in the database

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting (Upstash Redis) - Optional but recommended for production
# Sign up at https://upstash.com/ and create a Redis database
# Leave empty for development (will allow all requests)
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token
